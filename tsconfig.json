{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/ui/*": ["./src/modules/shared/presentation/ui/*"],
      "@/shared/*": ["./src/modules/shared/*"],
      "@/events/*": ["./src/modules/events/*"],
      "@/meetups/*": ["./src/modules/meetups/*"],
      "@/provinces/*": ["./src/modules/provinces/*"],
      "@/*": ["./src/*"]
    }
  }
}
