---
import Layout from '@/layouts/layout.astro'
import { FeatureRequestsContainer } from '@/modules/feature-requests/di/feature-requests.container'
import { ListFeatureRequestsQuery } from '@/modules/feature-requests/application/list-feature-requests.query'
import FeatureRequestsList from '@/modules/feature-requests/presentation/client/FeatureRequestsList'
import CreateFeatureRequestForm from '@/modules/feature-requests/presentation/client/CreateFeatureRequestForm'
import { SectionTitle } from '@/ui/components/section-title/section-title'
import { Card, CardHeader, CardTitle, CardContent } from '@/ui/card'

const user = Astro.locals.user
const requests = await FeatureRequestsContainer.get(ListFeatureRequestsQuery).execute({ currentUserId: user?.id })
---

<Layout title="Feature Requests">
  <div class="mx-auto pb-10">
    <SectionTitle>Nuevas funcionalidades</SectionTitle>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="md:col-span-2">
        <FeatureRequestsList
          client:load
          initialRequests={requests.map(r => r.toPrimitives())}
          currentUserId={user?.id}
        />
      </div>
      <div>
        <div class="sticky top-6">
          {
            user ? (
              <CreateFeatureRequestForm client:load />
            ) : (
              <Card className="bg-muted/50 border border-border">
                <CardHeader>
                  <CardTitle>Solicitar Funcionalidad</CardTitle>
                </CardHeader>
                <CardContent>
                  <p class="text-gray-600 dark:text-gray-400">
                    Debes{' '}
                    <a href="/login" class="text-primary hover:underline">
                      iniciar sesi√≥n
                    </a>{' '}
                    para crear una solicitud.
                  </p>
                </CardContent>
              </Card>
            )
          }
        </div>
      </div>
    </div>
  </div>
</Layout>
