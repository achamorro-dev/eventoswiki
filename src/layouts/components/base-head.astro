---
import { ClientRouter } from 'astro:transitions'
type BaseHeadProps = {
  title?: string
  description?: string
  image?: string
  url?: string
}

const {
  title = 'eventos.wiki',
  description = 'En eventos.wiki tendrás todos los eventos tecnológicos en un mismo lugar',
  image = 'https://eventos.wiki/og.jpg',
  url = 'https://eventos.wiki/',
} = Astro.props as BaseHeadProps
---

<head>
  <meta charset="utf-8" dir="rtl" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <meta name="apple-mobile-web-app-title" content="eventos.wiki" />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={url} />
  <meta property="og:title" content={title} />
  <meta property="og:image" content={image} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="eventos.wiki" />
  <meta property="og:locale" content="es_ES" />
  <meta name="twitter:site" content="@eventos_wiki" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:creator" content="@achamorro_dev" />
  <meta name="twitter:url" content={url} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />
  <link rel="canonical" href={url} />
  <title>{title}</title>
  <ClientRouter />

  <script is:inline>
    const setTheme = () => {
      const localStorageValue = localStorage.getItem('theme-mode')
      const darkTheme = 'dark'

      if (localStorageValue === darkTheme) {
        document.documentElement.classList.add(darkTheme)
      } else {
        document.documentElement.classList.remove(darkTheme)
      }
    }

    document.addEventListener('astro:after-swap', setTheme)
    setTheme()
  </script>
  {import.meta.env.PROD && (
    <script defer src="https://analytics.eventos.wiki/script.js" data-website-id="5f3a0b4e-9154-4a67-8aa5-0f2080a167a6"></script>
  )}
</head>
<slot />
