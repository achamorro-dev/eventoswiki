---
import { AuthOverlayClient } from '../../../client/components/auth-overlay/auth-overlay-client'

interface Props {
  redirectUrl?: string
  message?: string
}

const { redirectUrl, message = '¡Descubre todo el contenido! Inicia sesión para ver más páginas de eventos y meetups' } = Astro.props
---

<AuthOverlayClient client:load redirectUrl={redirectUrl} message={message} />

const AuthOverlay = AuthOverlayClient
