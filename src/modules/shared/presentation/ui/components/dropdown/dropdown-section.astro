---
interface Props {
  isLast?: boolean
}

const { isLast = false } = Astro.props
---

<ul class:list={['section', { 'last-section': isLast }]}>
  <slot />
</ul>

<style>
  @reference "../../../../../../styles/global.css";

  .section {
    @apply border-border text-foreground dark:text-foreground border-b py-2  text-sm;
  }
  .last-section {
    @apply border-b-0;
  }
</style>
