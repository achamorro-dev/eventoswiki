---
import { DateFormat } from '@/shared/domain/datetime/datetime'
import { Ticket } from '@/ui/icons'
import { Badge } from '@/ui/badge'
import { Card, CardContent, CardHeader } from '@/ui/card'
import DatePeriod from '@/ui/components/date-period/date-period.astro'
import Location from '@/ui/components/location/location.astro'

interface CardEvent {
  slug: string
  title: string
  image: string
  tags: string[]
  tagColor: string
  startsAt: Date
  endsAt: Date
  location?: string | null
  minPrice?: number | null
}
interface Props {
  event: CardEvent
  classes?: string
  goToEvent: (slug: string) => string
}

const { event, classes, goToEvent } = Astro.props

const formatPrice = (price: number): string => {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR',
  }).format(price)
}
---

<a
  href={goToEvent(event.slug)}
  class:list={['event-card-link', classes]}
  title={event.title}
  aria-label={`Ver evento ${event.title}`}
>
  <Card className="p-0 gap-0 border-border border">
    <CardHeader className="p-0">
      <div class="event-cover-container">
        <img
          class="event-cover"
          src={event.image.toString()}
          alt={`Foto de portada del evento ${event.title}`}
          loading="lazy"
          onerror="this.src='/not-found.jpg'"
          transition:name={`media-image-${event.slug}`}
        />
        {event.minPrice !== null && event.minPrice !== undefined && (
          <div class="price-badge">
            <Ticket size={16} />
            <span class="price-badge-text">Desde {formatPrice(event.minPrice)}</span>
          </div>
        )}
      </div>
    </CardHeader>
    <CardContent className="px-4 pt-0 pb-3">
      <div class="event-tags">
        {
          event.tags.map(t => (
            <Badge color={event.tagColor} className="text-white">
              {t.toUpperCase()}
            </Badge>
          ))
        }
      </div>
      <h3 class="event-title">{event.title}</h3>
      <section class="event-date-location">
        <Location location={event.location} />
        <DatePeriod startsAt={event.startsAt} endsAt={event.endsAt} format={DateFormat.DD_MMM_YYYY} />
      </section>
    </CardContent>
  </Card>
</a>

<style>
  @reference "../../../../../../styles/global.css";

  .event-card-link {
    @apply block;

    @media (prefers-reduced-motion: no-preference) {
      :hover .event-cover {
        transform: scale(1.1);
      }
    }
  }
  .event-cover-container {
    @apply relative w-full overflow-hidden rounded-t-xl;
  }
  .event-cover {
    @apply h-56 w-full object-cover;
    transition: 0.4s ease;
  }
  .price-badge {
    @apply absolute right-2 top-2 flex items-center gap-1 rounded-full bg-black/60 px-3 py-1.5 text-white backdrop-blur-sm;
  }
  .price-badge-text {
    @apply text-sm font-medium;
  }
  .event-tags {
    @apply mt-2 flex h-8 flex-wrap items-center gap-1;
  }
  .event-date-location {
    @apply text-muted-foreground flex w-full items-center justify-between gap-1 font-light;
  }
  .event-title {
    @apply text-foreground mt-2 line-clamp-1 p-0 text-xl font-semibold dark:text-gray-100;
  }
</style>
