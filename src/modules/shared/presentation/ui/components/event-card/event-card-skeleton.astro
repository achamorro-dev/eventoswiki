---
import { Card, CardContent, CardHeader } from '@/ui/card'
import VisuallyHidden from '../visually-hidden/visually-hidden.astro'
---

<Card className="event-card">
  <CardHeader className="p-0">
    <div class="event-cover"></div>
  </CardHeader>
  <CardContent className="px-4 pt-0 pb-3">
    <VisuallyHidden>Cargando evento</VisuallyHidden>
    <div class="event-tags"></div>
    <div class="event-title"></div>
    <div class="event-date-location">
      <div class="date"></div>
      <div class="location"></div>
    </div></CardContent
  >
</Card>

<style>
  @reference "../../../../../../styles/global.css";

  .event-card {
    @apply border-border animate-pulse gap-0 border p-0;
  }
  .event-cover {
    @apply h-56 w-full rounded-t-xl bg-gray-200 dark:bg-gray-700;
  }
  .event-tags {
    @apply h-6 w-28 rounded-xl bg-gray-200 dark:bg-gray-700;
  }
  .event-title {
    @apply mt-2 h-4 w-56 rounded-xl bg-gray-200 dark:bg-gray-700;
  }
  .event-date-location {
    @apply mt-2 flex w-full items-center justify-between;
  }
  .date,
  .location {
    @apply h-3 w-20 rounded-xl bg-gray-200 dark:bg-gray-700;
  }
</style>
