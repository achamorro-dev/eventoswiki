---
interface Props {
  maxSize?: 's' | 'm' | 'l'
  className?: string
}

const CONTAINER_MAX_SIZES: { [key: string]: string } = {
  s: 'max-w-3xl',
  m: 'max-w-5xl',
  l: 'max-w-7xl',
}
const { maxSize = 'l', className } = Astro.props

const maxSizeClass = CONTAINER_MAX_SIZES[maxSize]
---

<div class:list={'w-full bg-background px-4 pb-12 antialiased'}>
  <div class:list={['mx-auto', maxSizeClass, className]}>
    <slot />
  </div>
</div>
