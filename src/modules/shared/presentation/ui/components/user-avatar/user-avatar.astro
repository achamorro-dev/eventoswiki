---
import type { ClassesComponent } from '@/ui/classnames/classes-component'

interface Props extends ClassesComponent {
  userName: string
  image: URL
  size?: 'sm' | 'md' | 'lg' | 'xl'
}

const { userName, image: imageUrl, classes, size = 'md', ...rest } = Astro.props as Props
---

<img
  src={imageUrl.toString()}
  alt={`Avatar de ${userName}`}
  title={userName}
  class:list={['avatar', `avatar-${size}`, classes]}
  {...rest}
/>

<style>
  @reference "../../../../../../styles/global.css";

  .avatar {
    @apply rounded-full object-cover;
  }
  .avatar-sm {
    @apply size-6;
  }
  .avatar-md {
    @apply size-10;
  }
  .avatar-lg {
    @apply size-16;
  }
  .avatar-xl {
    @apply size-24;
  }
</style>
