---
import { Link } from '../link'
import { SectionTitle } from '../section-title/section-title'

interface Props {
  title: string
  actionLink: string
  actionText: string
}

const { title, actionLink, actionText } = Astro.props
---

<header class="header">
  <SectionTitle>{title}</SectionTitle>
  <Link href={actionLink} className="action-link" variant="link">{actionText}</Link>
</header>
<slot />

<style>
  @reference "../../../../../../styles/global.css";

  .header {
    @apply mb-4 flex w-full items-center justify-between;
  }
  .action-link {
    @apply shrink-0 text-right;
  }
</style>
