---
import Logo from '@/ui/components/logo/logo.astro'
import { Github, Twitter } from '@/ui/icons'

const collaborators = [
  {
    name: 'salteadorneo',
    avatar: 'https://avatars.githubusercontent.com/u/4882454?s=64&v=4',
    github: 'https://github.com/salteadorneo',
  },
  {
    name: 'omorest',
    avatar: 'https://avatars.githubusercontent.com/u/32195484?s=64&v=4',
    github: 'https://github.com/omorest',
  },
  {
    name: 'svg153',
    avatar: 'https://avatars.githubusercontent.com/u/9192031?s=64&v=4',
    github: 'https://github.com/svg153',
  },
  {
    name: 'felixicaza',
    avatar: 'https://avatars.githubusercontent.com/u/38303370?s=64&v=4',
    github: 'https://github.com/felixicaza',
  },
]
const specialThanks = [
  {
    name: 'alcastrob',
    avatar: 'https://avatars.githubusercontent.com/u/24974320?s=64&v=4',
    github: 'https://github.com/alcastrob',
  },
]
---

<section class="container flex flex-col items-center px-8 py-8 mx-auto max-w-7xl sm:flex-row mb-24 md:mb-0">
  <Logo />
  <div class="flex flex-col gap-2 justify-center items-center md:gap-0 md:flex-row md:justify-start">
    <p class="text-sm sm:ml-4 sm:pl-4 sm:border-l sm:border-border">
      Made with ‚ù§Ô∏è by <a
        href="https://twitter.com/achamorro_dev"
        class="hover:text-primary dark:hover:text-primary"
        target="_blank"
        rel="nofollow">@achamorro_dev</a
      >, collaborators:
    </p>
    <ul class="list-none flex gap-0 p-0 px-4 pr-2">
      {
        collaborators.map(collaborator => {
          return (
            <li class="-ml-2">
              <a href={collaborator.github} aria-label={collaborator.name} target="_blank" rel="nofollow">
                <img
                  src={collaborator.avatar}
                  alt={collaborator.name}
                  height="32"
                  width="32"
                  data-view-component="true"
                  class="border border-transparent rounded-full"
                />
              </a>
            </li>
          )
        })
      }
    </ul>
    <p class="w-full md:w-auto text-sm">and special thanks üéâ:</p>
    <ul class="list-none flex gap-0 px-4">
      {
        specialThanks.map(thanksTo => {
          return (
            <li class="-ml-2">
              <a href={thanksTo.github} aria-label={thanksTo.name} target="_blank" rel="nofollow">
                <img
                  src={thanksTo.avatar}
                  alt={thanksTo.name}
                  height="32"
                  width="32"
                  data-view-component="true"
                  class="border border-transparent rounded-full"
                />
              </a>
            </li>
          )
        })
      }
    </ul>
  </div>
  <span class="inline-flex justify-center mt-4 space-x-5 sm:ml-auto sm:mt-0 sm:justify-start">
    <a href="https://twitter.com/eventos_wiki" target="_blank" class="text-gray-400 hover:text-gray-500" rel="nofollow">
      <span class="sr-only">Twitter</span>
      <Twitter />
    </a>

    <a
      href="https://github.com/achamorro-dev/eventoswiki"
      rel="nofollow"
      target="_blank"
      class="text-gray-400 hover:text-gray-500"
    >
      <span class="sr-only">GitHub</span>
      <Github />
    </a>
  </span>
</section>
