---
interface Props {
  classes?: string
}

const { classes, ...rest } = Astro.props
---

<ul class:list={['slider', classes]} {...rest}>
  <slot />
</ul>

<style>
  @reference "../../../../../../styles/global.css";

  .slider {
    @apply flex snap-x gap-8 overflow-x-scroll pb-2 lg:pb-4;
  }
</style>
