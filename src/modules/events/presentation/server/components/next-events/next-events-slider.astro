---
import { EventsContainer } from '@/events/di/events.container'
import { GetNextEventsQuery } from '@/events/application/get-next-events.query'
import EventsSlider from '@/ui/components/events-slider/events-slider.astro'
import { Urls } from '@/ui/urls/urls'

interface Props {
  locationId?: string
  locationName?: string
}

const { locationId, locationName } = Astro.props
const { data: nextEvents } = await EventsContainer.get(GetNextEventsQuery).execute({ count: 10, location: locationId })

const eventsWithPrice = nextEvents.map(event => {
  const minPrice = 'getMinTicketPrice' in event ? (event as any).getMinTicketPrice() : null
  return {
    ...event,
    minPrice,
  }
})
---

<EventsSlider
  title={'PrÃ³ximos eventos' + (locationName ? ` en ${locationName}` : '')}
  seeMoreLink={Urls.EVENTS}
  goToEvent={Urls.EVENT}
  events={eventsWithPrice}
/>
