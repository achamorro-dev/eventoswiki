---
import { EventsLocator } from '@/events/di/events.locator'
import EventsSlider from '@/ui/components/events-slider/events-slider.astro'
import { Urls } from '@/ui/urls/urls'

interface Props {
  locationId?: string
  locationName?: string
}

const { locationId, locationName } = Astro.props
const { data: pastEvents } = await EventsLocator.getPastEventsQuery().execute({ count: 10, location: locationId })
---

<EventsSlider
  title={'Eventos pasados' + (locationName ? ` en ${locationName}` : '')}
  seeMoreLink={Urls.PAST_EVENTS}
  goToEvent={Urls.EVENT}
  events={pastEvents}
/>
