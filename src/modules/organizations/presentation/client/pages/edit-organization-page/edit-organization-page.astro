---
import type { Organization } from '@/organizations/domain/organization'
import { ProvincesLocator } from '@/provinces/di/provinces.locator'
import { SectionTitle } from '@/ui/components/section-title/section-title'
import { OrganizationEditForm } from '../../components/organization-edit-form/organization-edit-form'

interface Props {
  organizerId: string
  organization: Organization
}

const { organizerId, organization } = Astro.props as Props
const provinces = await ProvincesLocator.getProvincesQuery().execute()
---

<article>
  <SectionTitle>Editar Organizaci√≥n</SectionTitle>
  <OrganizationEditForm
    client:load
    organization={organization.toPrimitives()}
    organizerId={organizerId}
    provinces={provinces}
  />
</article>
