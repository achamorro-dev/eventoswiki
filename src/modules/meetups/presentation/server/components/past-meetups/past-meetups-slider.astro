---
import { GetPastMeetupsQuery } from '@/meetups/application/get-past-meetups.query'
import { MeetupsContainer } from '@/meetups/di/meetups.container'
import EventsSlider from '@/ui/components/events-slider/events-slider.astro'
import { Urls } from '@/ui/urls/urls'

interface Props {
  locationId?: string
  locationName?: string
}

const { locationId, locationName } = Astro.props
const { data: pastMeetups } = await MeetupsContainer.get(GetPastMeetupsQuery).execute({ count: 10, location: locationId })
---

<EventsSlider
  title={'Meetups pasados' + (locationName ? ` en ${locationName}` : '')}
  seeMoreLink={Urls.PAST_MEETUPS}
  goToEvent={Urls.MEETUP}
  events={pastMeetups}
/>
