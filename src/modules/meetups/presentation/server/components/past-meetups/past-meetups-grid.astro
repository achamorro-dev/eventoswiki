---
import { GetPastMeetupsQuery } from '@/meetups/application/get-past-meetups.query'
import { MeetupsContainer } from '@/meetups/di/meetups.container'
import EventsGrid from '@/ui/components/events-grid/events-grid.astro'
import { Urls } from '@/ui/urls/urls'

interface Props {
  location?: string
  page: number
}

const { location, page } = Astro.props

const { data: meetups, totalPages } = await MeetupsContainer.get(GetPastMeetupsQuery).execute({
  count: 12,
  page,
  location,
})
---

<EventsGrid events={meetups} page={page} totalPages={totalPages} goToEvent={Urls.MEETUP}>
  <slot />
</EventsGrid>
